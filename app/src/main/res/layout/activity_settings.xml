<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".SettingsActivity">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="80dp"
        android:text="Settings" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Settings" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="30dp"
        android:textColor="#061567"
        android:fontFamily="sans-serif-black"
        android:background="@drawable/addbtn"
        android:text="Add Music" />

    <Button
        android:id="@+id/sign_out_btn_id"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="30dp"
        android:textColor="#670606"
        android:fontFamily="sans-serif-black"
        android:background="@drawable/signoutbtn"
        android:text="Sign Out" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:gravity="bottom|center"
        android:text="This app is under Developement..." />
</androidx.appcompat.widget.LinearLayoutCompat>