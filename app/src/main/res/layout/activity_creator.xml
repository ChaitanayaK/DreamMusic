<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unique_background"
    tools:context=".CreatorActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="318dp"
        android:layout_height="97dp"
        android:gravity="center"
        android:text="Unique"
        android:textColor="@color/white"
        android:textSize="70dp"
        app:layout_constraintBottom_toTopOf="@+id/start_btn_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/start_btn_id"
        android:layout_width="208dp"
        android:layout_height="94dp"
        android:background="@drawable/createjoin"
        android:fontFamily="sans-serif-black"
        android:padding="20dp"
        android:text="Start"
        android:textColor="#931006"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/button2"
        android:layout_width="198dp"
        android:layout_height="94dp"
        android:background="@drawable/endbtn2"
        android:fontFamily="sans-serif-black"
        android:padding="20dp"
        android:text="End"
        android:textColor="#880532"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_btn_id"
        app:layout_constraintVertical_bias="0.5" />

    <ImageButton
        android:id="@+id/share_button_id"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/zxing_transparent"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089"
        app:srcCompat="@android:drawable/ic_menu_share"
        android:contentDescription="Share Button" />
</androidx.constraintlayout.widget.ConstraintLayout>